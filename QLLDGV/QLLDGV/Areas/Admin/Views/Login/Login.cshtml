@model QLLDGV.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "Đăng nhập Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng nhập Admin</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/style.css" rel="stylesheet">
</head>
<body style="background-color: bisque">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5">
                        <div class="login-wrap p-4 p-md-5">
                            <h2 class="heading-section text-center" style="text-align: center" >TRANG ĐĂNG NHẬP ADMIN</h2>
                            @ViewBag.ThongBao
                            <form action="#" class="login-form">
                                <h3  style="color:black">Email</h3>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control rounded-left" })
                                </div>
                                @ViewData["Loi1"]
                                <h3 style="color:black">Mật khẩu</h3>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control rounded-left" })
                                </div>
                                @ViewData["Loi2"]
                                <div class="row">
                                    <div class="col-md-6">
                                        <a href="/LoginGV/LoginGV" class="text-primary">Đăng nhập giáo viên</a>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <a href="/Admin/ForgetPasswordAdmin/ForgotPassword" class="text-primary">Quên mật khẩu?</a>
                                    </div>
                                </div>
                                <div class="form-group mt-3" >
                                    <button type="submit" class="btn btn-primary btn-block">ĐĂNG NHẬP</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>
</html>
