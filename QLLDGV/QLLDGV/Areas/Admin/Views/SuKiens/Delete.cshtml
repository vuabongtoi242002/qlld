<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sự kiện 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSuKien)
        </dd>

        <dt>
            Giáo viên 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GIAOVIEN1.HoTenGV)
