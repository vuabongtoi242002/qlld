@model QLLDGV.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "Đăng nhập giảng viên";
}

<!DOCTYPE html>

<html>
<head>
    <!--<meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />-->
    <title>ĐĂNG NHẬP</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    @using (Html.BeginForm("LoginGV", "LoginGV", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-5">
                        <div class="login-wrap p-4 p-md-5">
                            <h2 class="heading-section" style="text-align:center">TRANG ĐĂNG NHẬP GIÁO VIÊN</h2>
                            @ViewBag.ThongBao
                            <form action="#" class="login-form">
                                <h3>Email</h3>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control rounded-left" })
                                </div>
                                @ViewData["Loi1"]
                                <h3>Mật khẩu</h3>
                                <div class="form-group d-flex">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control rounded-left" })
                                </div>
                                @ViewData["Loi2"]
                            </form>
                            <table style="width: 100%;">
                                <tr>
                                    <td>
                                        <a href="/Admin/Login/Login">Đăng nhập quản trị</a>
                                    </td>
                                    <td style="text-align: right;">
                                        <a href="/ForgetPasswordGV/ForgotPassword">Quên mật khẩu?</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary rounded submit p-3 px-5">ĐĂNG NHẬP</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>
</html>


